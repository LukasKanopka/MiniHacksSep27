{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "FunctionsSignerAllowPutAnon",
      "Effect": "Allow",
      "Action": ["s3:PutObject"],
      "Resource": "arn:aws:s3:::YOUR_BUCKET/anon/*"
    },
    {
      "Sid": "WorkerAllowGetAnon",
      "Effect": "Allow",
      "Action": ["s3:GetObject"],
      "Resource": "arn:aws:s3:::YOUR_BUCKET/anon/*"
    }
  ]
}