# Environment template for local development
# Copy this file to .env and set appropriate values.

# OpenRouter (LLM provider) â€” API credentials and model selection
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_GEN_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_EMBED_MODEL=openai/text-embedding-3-small

# Neo4j Aura (graph database) connection
NEO4J_URI=neo4j+s://<id>.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# AWS + S3 (object storage) configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=

# Internal worker service (ingestion)
WORKER_INGEST_URL=http://localhost:8000/worker/ingest
WORKER_SIGNING_SECRET=

# Netlify site URL (used for absolute links and CORS in local dev)
NETLIFY_SITE_URL=http://localhost:8888